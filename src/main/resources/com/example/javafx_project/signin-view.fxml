<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<StackPane prefHeight="700.0" prefWidth="1000.0" styleClass="signin-root"
           stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_project.SignInController">

    <VBox alignment="CENTER" maxWidth="420.0" maxHeight="600.0" spacing="25" styleClass="auth-card">

        <StackPane>
            <Circle radius="26" fill="#FDF2F8" stroke="#FF7AC6" strokeWidth="1.5"/>
            <Label text="✨" style="-fx-font-size: 24;"/>
        </StackPane>

        <VBox alignment="CENTER" spacing="5">
            <Label text="Welcome Back" styleClass="header-text" />
            <Label text="Time to Glow and Grow" styleClass="subtitle-text" />
        </VBox>

        <Button text="← Back to Home" onAction="#handleBackToHome" styleClass="back-link"/>

        <VBox spacing="18">
            <VBox spacing="5">
                <Label text="Username" styleClass="field-label"/>
                <TextField fx:id="usernameField" promptText="jarin" styleClass="auth-input"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Password" styleClass="field-label"/>
                <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="auth-input"/>
            </VBox>
        </VBox>

        <Button fx:id="signInSubmitBtn" text="Sign In ✨" onAction="#onLoginButtonClick" styleClass="btn-gradient" maxWidth="Infinity" />

        <HBox alignment="CENTER" spacing="5">
            <Label text="New here?" style="-fx-text-fill: #6B7280;"/>
            <Hyperlink text="Create an Account" onAction="#goToSignUp" style="-fx-text-fill: #FF7AC6; -fx-font-weight: 800; -fx-underline: false;"/>
        </HBox>

        <Label text="OR CONTINUE WITH" styleClass="separator-text" />

        <HBox spacing="15" alignment="CENTER">
            <Button text="Google" styleClass="social-btn" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <Button text="GitHub" styleClass="social-btn" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        </HBox>
    </VBox>
</StackPane>
